        <div class="col-sm-3">
            <a asp-controller="MealsButtons" asp-action="rand_breakfast"><button class="btn btn-success mt-4 mb-4">Új reggeli</button></a>
        </div>
        <div class="col-sm-3">
            <a asp-controller="MealsButtons" asp-action="rand_soup"><button class="btn btn-success mt-4 mb-4">Új leves</button></a>

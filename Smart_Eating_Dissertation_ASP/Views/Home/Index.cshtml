            case DayOfWeek.Wednesday:
                <label  id="lb_mond">Hétfő</label>   
                <label  id="lb_tues">Kedd</label>
                <label style="color: white" id="lb_wednes">Szerda</label>
                <label  id="lb_thrus">Csütörtök</label>
                <label  id="lb_fri">Péntek</label>
                <label  id="lb_sat">Szombat</label>
                <label  id="lb_sun">Vasárnap</label>
                break;
            case DayOfWeek.Thursday:
                <label  id="lb_mond">Hétfő</label>   
                <label  id="lb_tues">Kedd</label>
                <label  id="lb_wednes">Szerda</label>
                <label style="color: white" id="lb_thrus">Csütörtök</label>
                <label  id="lb_fri">Péntek</label>
                <label  id="lb_sat">Szombat</label>
                <label  id="lb_sun">Vasárnap</label>
                break;
            case DayOfWeek.Friday:
                <label  id="lb_mond">Hétfő</label>   
                <label  id="lb_tues">Kedd</label>
                <label  id="lb_wednes">Szerda</label>
                <label  id="lb_thrus">Csütörtök</label>
                <label style="color: white" id="lb_fri">Péntek</label>
                <label  id="lb_sat">Szombat</label>
                <label  id="lb_sun">Vasárnap</label>
                break;
            case DayOfWeek.Saturday:
                <label  id="lb_mond">Hétfő</label>   
                <label  id="lb_tues">Kedd</label>
                <label  id="lb_wednes">Szerda</label>
                <label  id="lb_thrus">Csütörtök</label>
                <label  id="lb_fri">Péntek</label>
                <label style="color: white" id="lb_sat">Szombat</label>
                <label  id="lb_sun">Vasárnap</label>
                break;
            case DayOfWeek.Sunday:
                <label  id="lb_mond">Hétfő</label>   
                <label  id="lb_tues">Kedd</label>
                <label  id="lb_wednes">Szerda</label>
                <label  id="lb_thrus">Csütörtök</label>
                <label  id="lb_fri">Péntek</label>
                <label  id="lb_sat">Szombat</label>
                <label style="color: white" id="lb_sun">Vasárnap</label>
                break;
        }
    </div>
</div>

<div id="randmeals_btn_container" class="container-fluid">

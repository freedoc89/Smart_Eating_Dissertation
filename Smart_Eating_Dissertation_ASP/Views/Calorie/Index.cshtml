@model Smart_Eating_Dissertation_ASP.Models.CalorieCalculatorModel

@*Kalória kalkulátor index*@

@*Fejléc*@
    <head>
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
         <link rel="stylesheet" href="~/css/CalorieSite.css" asp-append-version="true" />
         <title> Kalória kalkulátor </title>
    </head>

@*Kép*@
    <header>
        <div class="container-fluid">
            <img class="img-responsive" src="./css/calcWindow_bg.jpg" alt="Kalória kalkulátor" title="Kalória kalkulátor"> 
        </div>
    </header>

@*Táblázat*@  
 <div class="container">        
    <table class="container-fluid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @*Táblázat fejléce*@
                <tr>
                    <th>
                        <div id="elso"> Adatok megadása: </div>                    
                    </th>
                </tr>

    @*Nem*@
                <tr>
                    <td class="td">
                            <div class="mb-2">
                            <label asp-for="Gender" class="control-label">Nem:</label>
                            <select  class="form-select" aria-label="Default select example">
                                <option value="Man">Férfi</option>
                                <option value="Woman">Nő</option>
                            </select>
                        </div>
                    </td>
                </tr>

    @*Kor*@
                <tr>
                    <td class="td">
                        <div class="mb-2">
                            <label asp-for="Age" class="control-label">Kor:</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

    @*Magasság*@
                <tr>
                    <td class="td">
                        <div class="mb-2">
                            <label asp-for="Height" class="control-label">Magasság (cm):</label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

    @*Súly*@
                <tr>
                    <td class="td">
                        <div class="mb-2">
                            <label asp-for="Weight" class="control-label"> Súly (kg):</label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

    @*Testzsír*@
                <tr>
                    <td class="td">
                            <div class="mb-2">
                            <label asp-for="BodyFat" class="control-label">Testzsír (Opcionális, %)</label>
                            <input asp-for="BodyFat" class="form-control" />
                            <span asp-validation-for="BodyFat" class="text-danger"></span>
                                <p>A program meghatározza a megadott adataid alapján, ha üresen hagyod <br />
                                    Az átlagosnál jóval fejlettebb izomzattal rendelkezőknek viszont 
                                        mindenképp érdemes kitöltenie a testzsírszázalékot</p>

                        </div>
                    </td>
                </tr>

    @*Cél*@
                <tr>
                    <td class="td">
                        <div class="mb-1">
                            <label asp-for="Target" class="control-label">Cél:</label>
                            <select class="form-select" aria-label="Default select example">
                                <option value="1">Szinten tartás</option>
                                <option value="2">Fogyás</option>
                                <option value="3">Tömegnövelés</option>
                            </select>
                        </div>
                    </td>
                </tr>
    </table>           
 </div>
    
@*Gombok*@
    <div class="mb-2">
        <a asp-action="Index asp-controller="Calorie" class="btn btn-success">Kalkuláció</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Vissza a főoldalra</a>
    </div>


